@model List<ResultBookingDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Client</th>
                <th>Check In</th>
                <th>Check Out</th>
                <th>Status</th>
                <th>Approve</th>
                <th>Cancel</th>
                <th>Pause</th>
                <th>Update</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                count++;
                <tr>
                    <th>@count</th>
                    <td>@item.Name</td>
                    <td>@(((DateTime)item.Checkin).ToString("dd-MMM-yyyy"))</td>
                    <td>@(((DateTime)item.CheckOut).ToString("dd-MMM-yyyy"))</td>
                    <td><span class="badge badge-primary px-2">@item.Status</span></td>
                    <td><a href="/AdminBooking/ApprovedReservation/@item.BookingID" class="btn btn-outline-primary">Approve</a></td>
                    <td><a href="#" class="btn btn-outline-danger">Cancel</a></td>
                    <td><a href="#" class="btn btn-outline-warning">Pause</a></td>
                    <td><a href="#" class="btn btn-outline-info">Update</a></td>
                    <td><a href="#" class="btn btn-outline-dark">Details</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

